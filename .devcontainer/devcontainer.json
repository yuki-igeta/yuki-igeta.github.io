{
    "name": "Jekyll Dev Container",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
          "rebornix.Ruby"
        ]
      }
    },
    "postCreateCommand": "bundle install",
    "forwardPorts": [4000],
    "remoteUser": "root"
  }
